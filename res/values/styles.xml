<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="list_item_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="contact_detail_field" parent="list_item_field">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="contact_title_field" parent="list_item_field">
        <item name="android:textScaleX">1.1</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/holo_green_dark</item>
    </style>
</resources>
